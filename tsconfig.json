{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "paths": {
      "mocks/*": ["__mocks__/*"],
      "assets/*": ["assets/*"],
      "src/*": ["src/*"],
      "components/*": ["src/components/*"],
      "containers/*": ["src/containers/*"],
      "store/*": ["src/store/*"]
    },
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "Node",
		"allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": [
      "dom", "es2015"
    ]
  }
}